# AR Research Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API Keys
# =============================================================================
OPEN_ROUTER_API_KEY=your_openrouter_api_key_here
# Alternative key name (both work)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# =============================================================================
# Storage Paths
# =============================================================================
# Root directory for all book storage
BOOK_STORAGE_ROOT=~/Documents/book_scans

# =============================================================================
# Pipeline Model Configuration
# =============================================================================

# OCR Stage
OCR_WORKERS=16                          # Parallel workers for OCR processing

# Correction Stage (3-agent pipeline)
CORRECT_MODEL=openai/gpt-4o-mini        # Model for agents 1-3
CORRECT_WORKERS=30                      # Parallel page processing
CORRECT_RATE_LIMIT=150                  # API calls per minute

# Fix Stage (Agent 4 targeted fixes)
FIX_MODEL=anthropic/claude-sonnet-4.5   # Best model for surgical corrections

# Structure Stage (Deep semantic analysis)
STRUCTURE_MODEL=anthropic/claude-sonnet-4.5  # Best model for understanding book structure

# =============================================================================
# Debug & Logging
# =============================================================================
LOG_LEVEL=INFO                          # DEBUG, INFO, WARNING, ERROR
SAVE_DEBUG_FILES=true                   # Save JSON parse errors to logs/debug/

# =============================================================================
# Processing Options
# =============================================================================

# Skip stages that are already complete
SKIP_COMPLETED_STAGES=true

# Auto-run Agent 4 fixes on flagged pages
AUTO_FIX=true

# Minimum confidence threshold for Agent 3
MIN_CONFIDENCE_THRESHOLD=0.9

# =============================================================================
# Cost Tracking
# =============================================================================
# Automatically track and report costs
TRACK_COSTS=true

# Warn if estimated cost exceeds threshold (in USD)
# COST_WARNING_THRESHOLD=10.0
